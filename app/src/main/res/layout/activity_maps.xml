<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivityNew" />

        <AutoCompleteTextView
            android:id="@+id/inptCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/inptDestinyLocation"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Enter current location"
            android:inputType="text" />

        <AutoCompleteTextView
            android:id="@+id/inptDestinyLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/routeButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Enter destination"
            android:inputType="text" />

        <Button
            android:id="@+id/routeButton"
            android:layout_width="170dp"
            android:layout_height="62dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="37dp"
            android:text="Go" />

        <TextView
            android:id="@+id/txtDestiny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:ems="12"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDestiny"
            android:ems="12"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


</RelativeLayout>